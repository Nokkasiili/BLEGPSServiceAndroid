<!-- activity_main.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity">

    <Button android:id="@+id/button_start_broadcast" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Start Broadcast"
        app:layout_constraintBottom_toTopOf="@+id/button_stop_broadcast"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button android:id="@+id/button_stop_broadcast" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Stop Broadcast"
        app:layout_constraintBottom_toTopOf="@+id/button_start_receive"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start_broadcast" />

    <Button android:id="@+id/button_start_receive" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Start Receive"
        app:layout_constraintBottom_toTopOf="@+id/button_stop_receive"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_stop_broadcast" />

    <Button android:id="@+id/button_stop_receive" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Stop Receive"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start_receive" />

</androidx.constraintlayout.widget.ConstraintLayout>